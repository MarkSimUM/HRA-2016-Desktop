  begin
     countCurrentProject.active := false;
     countCurrentProject.ParamByName('Account_ID').value := DM_MAIN.dataAccountACCOUNT_ID.value ;
     countCurrentProject.ParamByName('Product_ID').value := 0 ;
  end;
end;

